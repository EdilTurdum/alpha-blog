<h1>Listing all articles available.</h1>
<table>
    <thead>
        <tr>
            <th><strong>Title</strong></th>
            <th><strong>Description</strong></th>
            <th><strong>Actions</strong></th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td><%= article.title%></td>
            <td><%= article.description%></td>
            <td>Placeholder for actions</td>
        </tr>
        <% end %>
    </tbody>
</table>