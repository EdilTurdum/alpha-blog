<h1>Create a new article</h1>

<% if @article.errors.any? %>
    <ul>
    <% @article.errors.full_messages.each do |m| %>
            <li><p><%=m%></p></li>
    <% end%>
    </ul>
<% end %>

<%= form_with scope: :article, url: articles_path, data: { turbo: false }, local: true do |f|%>
    <p>
        <%= f.label :title %> <br/>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %> <br/>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>

<% end %>

<%= link_to 'Cancel and Return to all articles', articles_path%>